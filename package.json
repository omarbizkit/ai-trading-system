{
  "name": "ai-trading-system",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered cryptocurrency trading simulator for bizkit.dev portfolio",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:unit": "vitest",
    "test:performance": "playwright test tests/performance/",
    "test:e2e": "playwright test tests/e2e/",
    "test:quickstart": "node scripts/validate-quickstart.js",
    "test:quickstart:scenario": "node scripts/validate-quickstart.js scenario",
    "validate": "npm run test:unit && npm run test:performance && npm run test:quickstart",
    "type-check": "astro check",
    "type-check:production": "astro check --tsconfig ./tsconfig.production.json",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "format": "prettier --write .",
    "analyze-bundle": "node scripts/analyze-bundle.js",
    "optimize-assets": "node scripts/optimize-assets.js",
    "build:analyze": "npm run build && npm run analyze-bundle",
    "build:production": "npm run optimize-assets && npm run type-check:production && npm run build && npm run analyze-bundle"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^9.4.4",
    "@astrojs/tailwind": "^6.0.2",
    "@supabase/supabase-js": "^2.45.0",
    "astro": "^5.13.11",
    "lightweight-charts": "^4.1.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.8.7",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "eslint-plugin-astro": "^1.2.4",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
