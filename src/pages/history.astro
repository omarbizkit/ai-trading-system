              svg.style.color = h === this ? '#00ffff' : 'inherit';
            }
          });

          // In real app, would sort the data
          console.log(`Sorting by ${column} in ${sortDirection[column]} order`);
        });
      });

      // Row click for trade details
      const tradeRows = document.querySelectorAll('tbody tr[class*="cursor-pointer"]');
      tradeRows.forEach(row => {
        row.addEventListener('click', function() {
          // Remove active state from all rows
          tradeRows.forEach(r => r.classList.remove('ring-2', 'ring-neon-cyan'));

          // Add active state to clicked row
          this.classList.add('ring-2', 'ring-neon-cyan');

          // In real app, would show trade details modal
          const pair = this.cells[1].textContent;
          const pnl = this.cells[5].textContent;
          console.log(`Selected trade: ${pair} - ${pnl}`);
        });
      });

      // Filter form handling
      const filterInputs = document.querySelectorAll('select, input[type="text"]');
      filterInputs.forEach(input => {
        input.addEventListener('change', function() {
          // In real app, would filter the data
          console.log(`Filter changed: ${this.name || 'search'} = ${this.value}`);
        });
      });

      // Export functionality
      const exportButton = document.querySelector('button[class*="neon-green"]');
      if (exportButton) {
        exportButton.addEventListener('click', function() {
          // In real app, would generate and download CSV/PDF report
          alert('Export functionality would generate a detailed trading report here.');
        });
      }

      // Pagination
      const paginationButtons = document.querySelectorAll('button[class*="px-3"]');
      paginationButtons.forEach(button => {
        if (!button.disabled && button.textContent.match(/^\d+$/)) {
          button.addEventListener('click', function() {
            // Update active page
            paginationButtons.forEach(b => {
              if (b.textContent.match(/^\d+$/)) {
                b.className = b === this
                  ? 'bg-neon-cyan/20 border border-neon-cyan/50 text-neon-cyan px-3 py-1 rounded-lg text-sm font-medium'
                  : 'bg-dark-surface/50 hover:bg-dark-surface/70 border border-neon-cyan/30 text-text-secondary px-3 py-1 rounded-lg text-sm transition-colors';
              }
            });

            // In real app, would load new page data
            console.log(`Loading page ${this.textContent}`);
          });
        }
      });
    });
