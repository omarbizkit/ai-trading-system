<script>
  // @ts-nocheck
  document.addEventListener('DOMContentLoaded', function() {
    // Animate feature cards on scroll
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const cardObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animation = 'slideInUp 0.6s ease-out forwards';
        }
      });
    }, observerOptions);

    // Observe feature cards
    document.querySelectorAll('.feature-card, .step-card').forEach(card => {
      const element = card as HTMLElement;
      element.style.opacity = '0';
      element.style.transform = 'translateY(30px)';
      cardObserver.observe(card);
    });

    // Animate hero elements
    const heroElements = document.querySelectorAll('.hero-title, .hero-subtitle, .feature-pills, .cta-buttons');
    heroElements.forEach((el, index) => {
      const element = el as HTMLElement;
      element.style.animation = `fadeInUp 0.8s ease-out ${index * 0.2}s forwards`;
    });

    // Add dynamic glow effects
    const pills = document.querySelectorAll('.pill');
    pills.forEach(pill => {
      const element = pill as HTMLElement;
      pill.addEventListener('mouseenter', () => {
        element.style.boxShadow = '0 0 20px currentColor';
        element.style.transform = 'translateY(-2px)';
      });

      pill.addEventListener('mouseleave', () => {
        element.style.boxShadow = '';
        element.style.transform = 'translateY(0)';
      });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e: Event) {
        e.preventDefault();
        const link = this as HTMLAnchorElement;
        const href = link.getAttribute('href');
        if (href) {
          const target = document.querySelector(href);
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });

    // Track CTA clicks for analytics
    document.querySelectorAll('.cta-primary, .cta-secondary').forEach(button => {
      button.addEventListener('click', (e: Event) => {
        // Analytics tracking would go here
        const target = e.target as HTMLElement;
        if (target) {
          console.log('CTA clicked:', target.textContent?.trim());
        }
      });
    });
  });
</script>

