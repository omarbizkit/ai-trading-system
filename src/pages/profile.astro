  <!-- Settings Page Interactive Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Tab switching functionality
      const tabButtons = document.querySelectorAll('.setting-tab');
      const panels = document.querySelectorAll('.setting-panel');

      tabButtons.forEach(button => {
        button.addEventListener('click', function() {
          const targetTab = this.dataset.tab;

          // Remove active state from all tabs and panels
          tabButtons.forEach(btn => {
            btn.classList.remove('bg-neon-cyan/10', 'border-neon-cyan/30', 'text-neon-cyan');
            btn.classList.add('text-text-secondary');
          });
          panels.forEach(panel => {
            panel.classList.remove('active');
          });

          // Add active state to clicked tab and corresponding panel
          this.classList.add('bg-neon-cyan/10', 'border-neon-cyan/30', 'text-neon-cyan');
          this.classList.remove('text-text-secondary');

          const targetPanel = document.querySelector(`[data-panel="${targetTab}"]`);
          if (targetPanel) {
            targetPanel.classList.add('active');
          }
        });
      });

      // Strategy selection
      const strategyOptions = document.querySelectorAll('.strategy-option');
      strategyOptions.forEach(option => {
        option.addEventListener('click', function() {
          strategyOptions.forEach(opt => {
            opt.classList.remove('active', 'ring-2', 'ring-neon-green');
          });
          this.classList.add('active', 'ring-2', 'ring-neon-green');
        });
      });

      // Range sliders visual feedback
      const sliders = document.querySelectorAll('.slider');
      sliders.forEach(slider => {
        slider.addEventListener('input', function() {
          const value = this.value;
          const min = this.min || 0;
          const max = this.max || 100;
          const percentage = (value - min) / (max - min) * 100;

          // Update slider background
          this.style.background = `linear-gradient(to right, #00ffff 0%, #00ffff ${percentage}%, rgba(255,255,255,0.1) ${percentage}%, rgba(255,255,255,0.1) 100%)`;

          // Update value display
          const valueDisplay = this.parentNode.querySelector('.font-bold');
          if (valueDisplay) {
            valueDisplay.textContent = value + (this.parentNode.textContent.includes('%') ? '%' : '');
          }
        });

        // Initialize slider appearance
        slider.dispatchEvent(new Event('input'));
      });

      // Toggle switches
      const toggles = document.querySelectorAll('input[type="checkbox"]');
      toggles.forEach(toggle => {
        toggle.addEventListener('change', function() {
          const slider = this.nextElementSibling;
          const knob = slider.querySelector('div:last-child');

          if (this.checked) {
            slider.classList.add('peer-checked:bg-neon-cyan/20', 'peer-checked:border-neon-cyan');
            knob.classList.add('peer-checked:translate-x-6', 'peer-checked:bg-neon-cyan');
          } else {
            slider.classList.remove('peer-checked:bg-neon-cyan/20', 'peer-checked:border-neon-cyan');
            knob.classList.remove('peer-checked:translate-x-6', 'peer-checked:bg-neon-cyan');
          }
        });
      });

      // Form validation and saving
      const saveButtons = document.querySelectorAll('button[class*="Save"], button[class*="Update"]');
      saveButtons.forEach(button => {
        button.addEventListener('click', function() {
          // Show success notification
          const notification = document.createElement('div');
          notification.className = 'fixed top-4 right-4 bg-neon-green/20 border border-neon-green/50 text-neon-green px-6 py-3 rounded-lg z-50 animate-fade-in';
          notification.textContent = 'Settings saved successfully!';
          document.body.appendChild(notification);

          setTimeout(() => {
            notification.remove();
          }, 3000);
        });
      });
    });
  </script>

