---
/**
 * T063: User profile/settings page
 * Complete user profile management and system configuration
 */

import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';

const pageTitle = "Profile & Settings";
const pageDescription = "Manage your trading profile, preferences, and system configuration for optimal AI trading performance.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Navigation currentPath="/profile" />

  <main class="min-h-screen bg-dark-bg">
    <!-- Header Section -->
    <div class="border-b border-neon-cyan/30 bg-dark-surface/50 backdrop-blur-sm">
      <div class="container mx-auto px-4 py-6">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
          <!-- Page Title -->
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 bg-gradient-to-br from-neon-cyan to-neon-purple rounded-xl flex items-center justify-center glow-border">
              <span class="text-2xl">‚öôÔ∏è</span>
            </div>
            <div>
              <h1 class="text-3xl font-orbitron font-bold text-neon-cyan glow-text">
                PROFILE & SETTINGS
              </h1>
              <p class="text-text-secondary mt-1">
                Customize your AI trading experience and account preferences
              </p>
            </div>
          </div>

          <!-- User Status -->
          <div class="flex items-center space-x-6">
            <!-- Account Type -->
            <div class="text-right">
              <div class="text-neon-purple font-bold">PRO TRADER</div>
              <div class="text-xs text-text-muted">Active since Jan 2024</div>
            </div>

            <!-- Profile Avatar -->
            <div class="w-16 h-16 bg-gradient-to-br from-neon-purple to-neon-pink rounded-full flex items-center justify-center glow-border text-2xl font-bold">
              JD
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">

        <!-- Left Sidebar: Navigation -->
        <div class="lg:col-span-1">
          <div class="cyberpunk-card bg-dark-card/90 backdrop-blur-md rounded-xl border border-neon-cyan/30 p-6 sticky top-24">
            <h3 class="text-lg font-orbitron font-bold text-neon-cyan mb-4">Settings Menu</h3>

            <nav class="space-y-2">
              <button class="setting-tab w-full text-left p-3 rounded-lg bg-neon-cyan/10 border border-neon-cyan/30 text-neon-cyan font-medium transition-all" data-tab="profile">
                <span class="mr-3">üë§</span>
                Profile Information
              </button>
              <button class="setting-tab w-full text-left p-3 rounded-lg hover:bg-neon-cyan/5 text-text-secondary hover:text-neon-cyan transition-all" data-tab="trading">
                <span class="mr-3">‚ö°</span>
                Trading Preferences
              </button>
              <button class="setting-tab w-full text-left p-3 rounded-lg hover:bg-neon-cyan/5 text-text-secondary hover:text-neon-cyan transition-all" data-tab="ai">
                <span class="mr-3">üß†</span>
                AI Configuration
              </button>
              <button class="setting-tab w-full text-left p-3 rounded-lg hover:bg-neon-cyan/5 text-text-secondary hover:text-neon-cyan transition-all" data-tab="security">
                <span class="mr-3">üîí</span>
                Security & Privacy
              </button>
              <button class="setting-tab w-full text-left p-3 rounded-lg hover:bg-neon-cyan/5 text-text-secondary hover:text-neon-cyan transition-all" data-tab="notifications">
                <span class="mr-3">üîî</span>
                Notifications
              </button>
              <button class="setting-tab w-full text-left p-3 rounded-lg hover:bg-neon-cyan/5 text-text-secondary hover:text-neon-cyan transition-all" data-tab="subscription">
                <span class="mr-3">üíé</span>
                Subscription
              </button>
            </nav>

            <!-- Quick Stats -->
            <div class="mt-8 p-4 bg-dark-surface/30 rounded-lg border border-neon-purple/20">
              <h4 class="text-sm font-medium text-neon-purple mb-3">Account Overview</h4>
              <div class="space-y-2 text-xs">
                <div class="flex justify-between">
                  <span class="text-text-secondary">Member Since</span>
                  <span class="text-white">Jan 15, 2024</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-text-secondary">Total Trades</span>
                  <span class="text-neon-green">2,847</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-text-secondary">AI Accuracy</span>
                  <span class="text-neon-cyan">73.2%</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-text-secondary">Profit This Month</span>
                  <span class="text-neon-green">+$3,247</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Content: Settings Panels -->
        <div class="lg:col-span-3">
          <!-- Profile Information Tab -->
          <div class="setting-panel active" data-panel="profile">
            <div class="cyberpunk-card bg-dark-card/90 backdrop-blur-md rounded-xl border border-neon-cyan/30 p-6 mb-6">
              <h3 class="text-xl font-orbitron font-bold text-neon-cyan mb-6 flex items-center">
                <span class="mr-3">üë§</span>
                Profile Information
              </h3>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Profile Photo -->
                <div class="md:col-span-2">
                  <label class="block text-sm text-text-secondary mb-4">Profile Photo</label>
                  <div class="flex items-center space-x-4">
                    <div class="w-20 h-20 bg-gradient-to-br from-neon-purple to-neon-pink rounded-full flex items-center justify-center glow-border text-2xl font-bold">
                      JD
                    </div>
                    <div class="flex flex-col space-y-2">
                      <button class="bg-neon-cyan/20 hover:bg-neon-cyan/30 border border-neon-cyan/50 text-neon-cyan px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                        Change Photo
                      </button>
                      <button class="bg-dark-surface/50 hover:bg-dark-surface/70 border border-neon-cyan/30 text-text-secondary px-4 py-2 rounded-lg text-sm transition-colors">
                        Remove
                      </button>
                    </div>
                  </div>
                </div>

                <!-- First Name -->
                <div>
                  <label class="block text-sm text-text-secondary mb-2">First Name</label>
                  <input
                    type="text"
                    value="John"
                    class="w-full bg-dark-surface/50 border border-neon-cyan/30 text-white rounded-lg px-4 py-3 focus:outline-none focus:border-neon-cyan transition-colors"
                  >
                </div>

                <!-- Last Name -->
                <div>
                  <label class="block text-sm text-text-secondary mb-2">Last Name</label>
                  <input
                    type="text"
                    value="Doe"
                    class="w-full bg-dark-surface/50 border border-neon-cyan/30 text-white rounded-lg px-4 py-3 focus:outline-none focus:border-neon-cyan transition-colors"
                  >
                </div>

                <!-- Email -->
                <div>
                  <label class="block text-sm text-text-secondary mb-2">Email Address</label>
                  <input
                    type="email"
                    value="john.doe@example.com"
                    class="w-full bg-dark-surface/50 border border-neon-cyan/30 text-white rounded-lg px-4 py-3 focus:outline-none focus:border-neon-cyan transition-colors"
                  >
                </div>

                <!-- Phone -->
                <div>
                  <label class="block text-sm text-text-secondary mb-2">Phone Number</label>
                  <input
                    type="tel"
                    value="+1 (555) 123-4567"
                    class="w-full bg-dark-surface/50 border border-neon-cyan/30 text-white rounded-lg px-4 py-3 focus:outline-none focus:border-neon-cyan transition-colors"
                  >
                </div>

                <!-- Timezone -->
                <div>
                  <label class="block text-sm text-text-secondary mb-2">Timezone</label>
                  <select class="w-full bg-dark-surface/50 border border-neon-cyan/30 text-white rounded-lg px-4 py-3 focus:outline-none focus:border-neon-cyan">
                    <option>UTC-8 (Pacific Time)</option>
                    <option>UTC-5 (Eastern Time)</option>
                    <option>UTC+0 (GMT)</option>
                    <option>UTC+1 (Central Europe)</option>
                    <option>UTC+8 (Asia/Singapore)</option>
                  </select>
                </div>

                <!-- Language -->
                <div>
                  <label class="block text-sm text-text-secondary mb-2">Language</label>
                  <select class="w-full bg-dark-surface/50 border border-neon-cyan/30 text-white rounded-lg px-4 py-3 focus:outline-none focus:border-neon-cyan">
                    <option>English</option>
                    <option>Spanish</option>
                    <option>French</option>
                    <option>German</option>
                    <option>Japanese</option>
                    <option>Chinese</option>
                  </select>
                </div>
              </div>

              <div class="flex justify-end mt-6 space-x-3">
                <button class="bg-dark-surface/50 hover:bg-dark-surface/70 border border-neon-cyan/30 text-text-secondary px-6 py-2 rounded-lg font-medium transition-colors">
                  Cancel
                </button>
                <button class="bg-neon-cyan/20 hover:bg-neon-cyan/30 border border-neon-cyan/50 text-neon-cyan px-6 py-2 rounded-lg font-medium transition-colors">
                  Save Changes
                </button>
              </div>
            </div>
          </div>

          <!-- Trading Preferences Tab -->
          <div class="setting-panel" data-panel="trading">
            <div class="cyberpunk-card bg-dark-card/90 backdrop-blur-md rounded-xl border border-neon-purple/30 p-6 mb-6">
              <h3 class="text-xl font-orbitron font-bold text-neon-purple mb-6 flex items-center">
                <span class="mr-3">‚ö°</span>
                Trading Preferences
              </h3>

              <div class="space-y-6">
                <!-- Risk Management -->
                <div>
                  <h4 class="text-lg font-medium text-white mb-4">Risk Management</h4>
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label class="block text-sm text-text-secondary mb-2">Max Position Size (%)</label>
                      <input
                        type="range"
                        min="1"
                        max="25"
                        value="10"
                        class="w-full h-2 bg-dark-surface/50 rounded-lg appearance-none cursor-pointer slider"
                      >
                      <div class="flex justify-between text-xs text-text-muted mt-1">
                        <span>1%</span>
                        <span class="text-neon-purple font-bold">10%</span>
                        <span>25%</span>
                      </div>
                    </div>

                    <div>
                      <label class="block text-sm text-text-secondary mb-2">Stop Loss (%)</label>
                      <input
                        type="range"
                        min="1"
                        max="20"
                        value="5"
                        class="w-full h-2 bg-dark-surface/50 rounded-lg appearance-none cursor-pointer slider"
                      >
                      <div class="flex justify-between text-xs text-text-muted mt-1">
                        <span>1%</span>
                        <span class="text-neon-purple font-bold">5%</span>
                        <span>20%</span>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Trading Strategy -->
                <div>
                  <h4 class="text-lg font-medium text-white mb-4">Default Strategy</h4>
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div class="bg-dark-surface/30 p-4 rounded-lg border border-neon-green/20 cursor-pointer hover:border-neon-green/40 transition-colors strategy-option active">
                      <div class="text-center">
                        <div class="text-2xl mb-2">üõ°Ô∏è</div>
                        <div class="text-white font-medium">Conservative</div>
                        <div class="text-xs text-text-muted mt-1">Lower risk, steady gains</div>
                      </div>
                    </div>
                    <div class="bg-dark-surface/30 p-4 rounded-lg border border-neon-purple/20 cursor-pointer hover:border-neon-purple/40 transition-colors strategy-option">
                      <div class="text-center">
                        <div class="text-2xl mb-2">‚öñÔ∏è</div>
                        <div class="text-white font-medium">Balanced</div>
                        <div class="text-xs text-text-muted mt-1">Moderate risk/reward</div>
                      </div>
                    </div>
                    <div class="bg-dark-surface/30 p-4 rounded-lg border border-neon-pink/20 cursor-pointer hover:border-neon-pink/40 transition-colors strategy-option">
                      <div class="text-center">
                        <div class="text-2xl mb-2">üöÄ</div>
                        <div class="text-white font-medium">Aggressive</div>
                        <div class="text-xs text-text-muted mt-1">High risk, high reward</div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Preferred Assets -->
                <div>
                  <h4 class="text-lg font-medium text-white mb-4">Preferred Assets</h4>
                  <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                    <label class="flex items-center space-x-2 cursor-pointer">
                      <input type="checkbox" checked class="sr-only peer">
                      <div class="w-5 h-5 border-2 border-neon-cyan/30 rounded peer-checked:bg-neon-cyan peer-checked:border-neon-cyan transition-colors"></div>
                      <span class="text-white">BTC/USDT</span>
                    </label>
                    <label class="flex items-center space-x-2 cursor-pointer">
                      <input type="checkbox" checked class="sr-only peer">
                      <div class="w-5 h-5 border-2 border-neon-cyan/30 rounded peer-checked:bg-neon-cyan peer-checked:border-neon-cyan transition-colors"></div>
                      <span class="text-white">ETH/USDT</span>
                    </label>
                    <label class="flex items-center space-x-2 cursor-pointer">
                      <input type="checkbox" class="sr-only peer">
                      <div class="w-5 h-5 border-2 border-neon-cyan/30 rounded peer-checked:bg-neon-cyan peer-checked:border-neon-cyan transition-colors"></div>
                      <span class="text-white">ADA/USDT</span>
                    </label>
                    <label class="flex items-center space-x-2 cursor-pointer">
                      <input type="checkbox" checked class="sr-only peer">
                      <div class="w-5 h-5 border-2 border-neon-cyan/30 rounded peer-checked:bg-neon-cyan peer-checked:border-neon-cyan transition-colors"></div>
                      <span class="text-white">SOL/USDT</span>
                    </label>
                  </div>
                </div>

                <!-- Auto Trading -->
                <div>
                  <h4 class="text-lg font-medium text-white mb-4">Automation Settings</h4>
                  <div class="space-y-4">
                    <label class="flex items-center justify-between cursor-pointer">
                      <div>
                        <div class="text-white font-medium">Enable Auto Trading</div>
                        <div class="text-sm text-text-muted">Allow AI to execute trades automatically</div>
                      </div>
                      <div class="relative inline-block w-12 h-6">
                        <input type="checkbox" checked class="sr-only peer">
                        <div class="w-12 h-6 bg-dark-surface/50 rounded-full peer-checked:bg-neon-cyan/20 peer-checked:border-neon-cyan border border-neon-cyan/30 transition-colors"></div>
                        <div class="absolute top-0.5 left-0.5 w-5 h-5 bg-neon-cyan rounded-full transition-transform peer-checked:translate-x-6"></div>
                      </div>
                    </label>

                    <label class="flex items-center justify-between cursor-pointer">
                      <div>
                        <div class="text-white font-medium">Trade During Market Hours Only</div>
                        <div class="text-sm text-text-muted">Limit trading to your timezone's market hours</div>
                      </div>
                      <div class="relative inline-block w-12 h-6">
                        <input type="checkbox" class="sr-only peer">
                        <div class="w-12 h-6 bg-dark-surface/50 rounded-full peer-checked:bg-neon-cyan/20 peer-checked:border-neon-cyan border border-neon-cyan/30 transition-colors"></div>
                        <div class="absolute top-0.5 left-0.5 w-5 h-5 bg-gray-400 rounded-full transition-transform peer-checked:translate-x-6 peer-checked:bg-neon-cyan"></div>
                      </div>
                    </label>
                  </div>
                </div>
              </div>

              <div class="flex justify-end mt-6 space-x-3">
                <button class="bg-dark-surface/50 hover:bg-dark-surface/70 border border-neon-cyan/30 text-text-secondary px-6 py-2 rounded-lg font-medium transition-colors">
