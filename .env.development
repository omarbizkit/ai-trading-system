# AI Trading System - Development Environment Configuration
# This file contains development-specific overrides

# =============================================================================
# Development Environment Settings
# =============================================================================

NODE_ENV=development
PORT=4321
HOST=0.0.0.0

# Application URLs
PUBLIC_APP_URL=http://localhost:4321
PUBLIC_PORTFOLIO_URL=http://localhost:3000

# =============================================================================
# Development Database
# =============================================================================

# Use local PostgreSQL or Docker container
DATABASE_URL=postgresql://ai_trading:dev_password@localhost:5432/ai_trading_dev

# =============================================================================
# Development Redis
# =============================================================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=1800

# =============================================================================
# Development API Configuration
# =============================================================================

# Enable real API calls but with development rate limits
ENABLE_REAL_API_CALLS=true
MOCK_DATA_ENABLED=false
ENABLE_PRICE_UPDATES=true
UPDATE_INTERVAL_MS=5000

# =============================================================================
# Development AI/ML Settings
# =============================================================================

# Use local TensorFlow.js models
TENSORFLOW_JS_BACKEND=cpu
AI_CONFIDENCE_THRESHOLD=0.5
MODEL_CACHE_TTL=300
ML_INFERENCE_ENDPOINT=http://localhost:8080/predict

# =============================================================================
# Development Trading Settings
# =============================================================================

DEFAULT_PORTFOLIO_VALUE=10000
DEFAULT_STARTING_CAPITAL=10000
MAX_POSITION_SIZE=0.05
DEFAULT_RISK_PER_TRADE=0.01
RISK_MANAGEMENT_ENABLED=true
PAPER_TRADING_ONLY=true
ENABLE_REAL_TRADING=false

# =============================================================================
# Development Security (Relaxed for testing)
# =============================================================================

JWT_SECRET=dev-jwt-secret-key-for-development-only
JWT_EXPIRES_IN=24h
SESSION_SECRET=dev-session-secret-for-local-testing

# CORS - Allow local development servers
CORS_ORIGIN=http://localhost:4321,http://localhost:3000,http://localhost:5173

# =============================================================================
# Development Monitoring
# =============================================================================

SENTRY_DSN=
SENTRY_ENVIRONMENT=development
LOG_LEVEL=debug
ENABLE_DEBUG_LOGS=true
DEBUG=ai-trading:*

# =============================================================================
# Development Feature Flags
# =============================================================================

# Enable all features for development testing
ENABLE_AI_PREDICTIONS=true
ENABLE_BACKTESTING=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PAPER_TRADING=true
ENABLE_ADVANCED_CHARTS=true
ENABLE_MOBILE_APP=true
ENABLE_API_ACCESS=true

# =============================================================================
# Development Performance
# =============================================================================

LIGHTHOUSE_SERVER_URL=http://localhost:9001
ASTRO_TELEMETRY_DISABLED=1