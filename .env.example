# AI Trading System - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Server Configuration
PORT=4321
HOST=0.0.0.0

# Application URLs
PUBLIC_APP_URL=http://localhost:4321
PUBLIC_PORTFOLIO_URL=https://bizkit.dev

# =============================================================================
# Supabase Configuration (Required)
# =============================================================================

# Supabase Project Settings
# Get these from https://app.supabase.com/project/{your-project}/settings/api
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (Server-side only - keep secret!)
# Only use this for server-side operations that require elevated permissions
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# External APIs
# =============================================================================

# CoinGecko API (Optional - for higher rate limits)
# Get API key from: https://www.coingecko.com/en/api/pricing
COINGECKO_API_KEY=your-coingecko-api-key

# =============================================================================
# AI/ML Model Configuration
# =============================================================================

# Model serving configuration
AI_MODEL_VERSION=v1.2.3
AI_MODEL_TYPE=lstm
MODEL_URL=https://your-model-endpoint.com/v1
MODEL_VERSION=1.0.0

# Model inference settings
AI_CONFIDENCE_THRESHOLD=0.6
MODEL_CONFIDENCE_THRESHOLD=0.7
MODEL_CACHE_TTL=300
TENSORFLOW_JS_BACKEND=cpu
ML_INFERENCE_ENDPOINT=

# =============================================================================
# Trading Configuration
# =============================================================================

# Default trading parameters
DEFAULT_PORTFOLIO_VALUE=50000
DEFAULT_STARTING_CAPITAL=10000
MAX_POSITION_SIZE=0.1
DEFAULT_RISK_PER_TRADE=0.02
DEFAULT_STOP_LOSS=0.05
DEFAULT_TAKE_PROFIT=0.10

# Trading controls
RISK_MANAGEMENT_ENABLED=true
PAPER_TRADING_ONLY=true
ENABLE_REAL_TRADING=false

# =============================================================================
# External Services Control
# =============================================================================

# API and service toggles
ENABLE_REAL_API_CALLS=false
MOCK_DATA_ENABLED=true
ENABLE_PRICE_UPDATES=true
UPDATE_INTERVAL_MS=5000

# =============================================================================
# Database Configuration (Local Development)
# =============================================================================

# Local PostgreSQL (when using Docker)
DATABASE_URL=postgresql://ai_trading:dev_password_change_in_production@localhost:5432/ai_trading_dev

# =============================================================================
# Redis Configuration (Caching)
# =============================================================================

# Redis connection (local development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=3600

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# Session configuration
SESSION_SECRET=your-session-secret-key-here

# CORS configuration
CORS_ORIGIN=http://localhost:4321,https://bizkit.dev

# =============================================================================
# Monitoring and Analytics
# =============================================================================

# Application monitoring
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Performance monitoring
LIGHTHOUSE_SERVER_URL=http://localhost:9001

# =============================================================================
# Development Tools
# =============================================================================

# Development mode settings
LOG_LEVEL=debug
ENABLE_DEBUG_LOGS=true
DEBUG=ai-trading:*

# Astro configuration
ASTRO_TELEMETRY_DISABLED=1

# =============================================================================
# Feature Flags
# =============================================================================

# Feature toggles
ENABLE_AI_PREDICTIONS=true
ENABLE_BACKTESTING=true
ENABLE_SOCIAL_FEATURES=false
ENABLE_PAPER_TRADING=true

# Beta features
ENABLE_ADVANCED_CHARTS=true
ENABLE_MOBILE_APP=true
ENABLE_API_ACCESS=true

# =============================================================================
# Zeabur Deployment (Production)
# =============================================================================

# Zeabur configuration (set in Zeabur dashboard)
ZEABUR_PROJECT_ID=your-zeabur-project-id
ZEABUR_SERVICE_ID=your-zeabur-service-id
